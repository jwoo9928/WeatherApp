                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:fontFamily="@font/my_font_family"
                        android:text="@string/day_5"/>

                    <ImageView
                        android:id="@+id/day5_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/clear_sky"
                        />

                    <TextView
                        android:id="@+id/day5_temp"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:fontFamily="@font/my_font_family"
                        android:text="@string/day5_temp"/>



                </LinearLayout>



