                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/day_weather"
                android:textSize="20dp"
                android:fontFamily="@font/my_font_family"
                android:background="#AFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/day1"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:fontFamily="@font/my_font_family"
                        android:text="@string/day_1" />

                    <ImageView
                        android:id="@+id/day1_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/clear_sky"
                        />

                    <TextView
                        android:id="@+id/day1_temp"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:fontFamily="@font/my_font_family"
                        android:text="@string/day1_temp"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
