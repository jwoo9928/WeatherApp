                            android:id="@+id/time2_temp"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:fontFamily="@font/my_font_family"
                            android:text="@string/temp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/time3"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:gravity="center"
                                android:fontFamily="@font/my_font_family"
                                android:text="@string/time_3"/>
                            <ImageView
                                android:id="@+id/time3_img"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:gravity="center"
                                android:src="@drawable/clear_sky"/>
                            <TextView
                                android:id="@+id/time3_temp"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:gravity="center"
                                android:fontFamily="@font/my_font_family"
                                android:text="@string/temp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/time4"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:gravity="center"
                                android:fontFamily="@font/my_font_family"
                                android:text="@string/time_4"/>
                            <ImageView
                                android:id="@+id/time4_img"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/snow"/>
                            <TextView
                                android:id="@+id/time4_temp"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:gravity="center"
                                android:fontFamily="@font/my_font_family"
                                android:text="@string/temp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/time5"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:gravity="center"
                                android:fontFamily="@font/my_font_family"
                                android:text="@string/time_5"/>
                            <ImageView
                                android:id="@+id/time5_img"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/rain"/>
                            <TextView
                                android:id="@+id/time5_temp"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:gravity="center"
                                android:fontFamily="@font/my_font_family"
                                android:text="@string/temp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
