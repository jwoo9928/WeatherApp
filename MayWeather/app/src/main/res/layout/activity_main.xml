            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="350dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>


            <ImageView
                android:id="@+id/weatherImage"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_marginStart="75dp"
                android:layout_marginLeft="75dp"
                android:src="@drawable/cloud"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/degree"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="116dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/my_font_family"
                    android:gravity="center"
                    android:text="온도"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/airpolutionView"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/clear_sky" />

                    <TextView
                        android:id="@+id/dust_info"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="0dp"
                        android:gravity="center"
                        android:fontFamily="@font/my_font_family"
                        android:text="@string/dust_info"/>

                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/weather_icon1"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:src="@drawable/cloud"/>
                <TextView
                    android:id="@+id/weather_info1"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:gravity="center"
                    android:fontFamily="@font/my_font_family"
                    android:text="@string/weather_info"/>

                <ImageView
                    android:id="@+id/weather_icon2"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/cloud" />

                <TextView
                    android:id="@+id/weather_info2"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:gravity="center"
                    android:fontFamily="@font/my_font_family"
                    android:text="@string/weather_info" />

                <ImageView
                    android:id="@+id/weather_icon3"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/cloud"/>

                <TextView
                    android:id="@+id/weather_info4"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:gravity="center"
                    android:fontFamily="@font/my_font_family"
                    android:text="@string/weather_info"/>

            </LinearLayout>

            <TextView
                android:id="@+id/time_temp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/time_temp"
                android:textSize="20dp"
                android:fontFamily="@font/my_font_family"
                android:background="#AFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/time1"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:fontFamily="@font/my_font_family"
                            android:text="@string/time_1"/>

                        <ImageView
                            android:id="@+id/time1_img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/thuntherstorm" />
                        <TextView
                            android:id="@+id/time1_temp"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:fontFamily="@font/my_font_family"
                            android:text="@string/temp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/time2"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:fontFamily="@font/my_font_family"
                            android:text="@string/time_2"/>

                        <ImageView
                            android:id="@+id/time2_img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/mist" />
